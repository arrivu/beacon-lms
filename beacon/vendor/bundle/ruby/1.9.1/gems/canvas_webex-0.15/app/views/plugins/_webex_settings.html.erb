<%= fields_for :settings, OpenObject.new(settings) do |f| %>
    <table class="formtable" style="width: 500px;">
        <tbody>
        <tr>
           <td><%= f.blabel :webex_service, t('webex_service_setting', 'Service')  %></td>
           <td>
             <%= f.select :webex_service, [[t('webex_meeting_center', 'Meeting Center'), 'meeting'],
                                                                        [t('webex_training_center', 'Training Center'), 'training']] %>
             <div class="hint-text">
               <%= t(:sevrice_selector_change, "Changing this option will immediately terminate all current meetings of other service types") %>
            </div>
          </td>
        <tr>
            <td><%= f.blabel :webex_id, :en => "WebEx ID" %></td>
            <td>
                <%= f.text_field :webex_id, :autocomplete => false %><br>
            </td>
        </tr>
        <tr>
            <td><%= f.blabel :password, :en => "Password" %></td>
            <td>
                <%= f.password_field :password, :autocomplete => false %><br>
            </td>
        </tr>
        <tr>
            <td><%= f.blabel :site_id, "Site ID" %></td>
            <td>
                <%= f.text_field :site_id, :autocomplete => false %><br>
            </td>
        </tr>
        <tr>
            <td><%= f.blabel :site_name, "Site Name" %></td>
            <td>
                <%= f.text_field :site_name, :autocomplete => false %>
                <div class="hint-text">
                    <%= t(:site_name_description, "Site name for your WebEx account,
                    if the url is \"https://school.webex.com\" then your site name is 'school'") %>
                </div>
            </td>
        </tr>
        <tr>
            <td><%= f.blabel :meting_password, "Meeting Password"%></td>
            <td>
                <%= f.password_field :meeting_password, :autocomplete => false%>
                <div class="hint-text">
                    <%= t(:meeting_password_description, 'Meeting password must adhere to WebEx password requirements') %>
                </div>
                <br>
            </td>
        </tr>
        </tbody>
    </table>
<% end %>
